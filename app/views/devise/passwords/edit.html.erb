        <div class="span6 row-fluid">
              <p>Please reset your password below. If you have any questions or problems, please contact the Program Administrator at <a href="mailto:rise@dal.ca">rise@dal.ca</a>.</p>


<div class="row-fluid box paint color_2">
    <div class="title">
      <h4> <i class="icon-calendar"></i> <span>Change your password</span> </h4>
   </div>
   <div class="content" >

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put },input_html: { class: 'bs-docs-example form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, :as => :hidden %>
  <%= f.full_error :reset_password_token %>


     <div class="control-group row-fluid">
      <label class="control-label span3" for="inputPassword">New password:</label>
      <div class="controls span9">
         <%= f.input :password, :autofocus => true,:required => true, label: false, input_html: { class: 'row-fluid' } %>
      </div>
     </div>
      <div class="control-group row-fluid">
      <label class="control-label span3" for="inputPassword">Confirm password:</label>
      <div class="controls span9">
         <%= f.input :password_confirmation, :autofocus => false,:required => true, label: false, input_html: { class: 'row-fluid' } %>
      </div>
     </div>
      <div class="control-group row-fluid">
    <div class="controls span7">
    </div>

         <div class="controls span5">
      
      <%= f.button :submit, "Change my password", label: false, input_html: { class: 'btn btn-primary' } %> 
      </div>
      </div>
     
<% end %>

<%= render "devise/shared/links" %>
</div>


</div>

</div>


