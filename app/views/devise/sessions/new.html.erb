<div class="row-fluid box paint color_2">
    <div class="title">
      <h4> <i class="icon-calendar"></i> <span>Sign in</span> </h4>
   </div>
   <div class="content" >

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name),input_html: { class: 'bs-docs-example form-horizontal'}) do |f| %>


     <div class="control-group row-fluid">
      <label class="control-label span3" for="inputPassword">Email:</label>
      <div class="controls span9 input-append">
         <%= f.input :email, :autofocus => true, label: false, input_html: { class: 'row-fluid' } %>
         <span class="add-on"><i class="icon-user"></i></span> 
      </div>
     </div>
      <div class="control-group row-fluid">
      <label class="control-label span3" for="inputPassword">Password:</label>
      <div class="controls span9 input-append">
         <%= f.input :password, :autofocus => false, label: false, input_html: { class: 'row-fluid' } %>
         <span class="add-on"><i class="icon-lock"></i></span> 
      </div>
     </div>
      <div class="control-group row-fluid">
    <div class="controls span7">
    </div>

         <div class="controls span5">
        
      <%= f.button :submit,  "Sign in", label: false, input_html: { class: 'btn btn-primary' } %> 
      </div>
      </div>
     
<% end %>

